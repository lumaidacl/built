@import 'normalize'

_background-image = url(../img/group.png)
_background-project-1 = url(../img/on-sale-bg.jpg)

_green = #61bb46
_green_light = #8fc73e
_gray_dark = #303030
_gray_medium = #4a4a4a
_gray_light = #9b9b9b
_gray_soft = #d8d8d8
_white = #FFFFFF

body
  font-family 'Roboto', sans-serif
  font-size 16px
body, html
  height 100%
.section
  padding 2em 0em
/**
  nav-bar
*/
nav
  position fixed
  bottom 0
  width 100%
  background _white
  box-shadow 0 -2px 5px 0 rgba(0, 0, 0, 0.2)
  ul
    display flex
    margin 0
    padding 0
    li
      flex-grow 1
      list-style none
      text-align center
      font-size 14px
      font-weight 300
      opacity 0.3
    .active
      opacity 1
    a
      padding 1em 0
      color _gray_dark
      text-decoration none
      display block

/**
  about-us
*/
.about-us
  width 100%
  z-index 1
  background-image _background-image
  margin 0
  background-size cover
  //height 100vh
  text-align center
  background-position center center
  &__box
    display flex
    height 100vh
  &__wrapper
    display flex
    justify-content center
    flex-wrap wrap
    height 400px
    margin 4em auto
  &__logo
    text-align center
    margin 0
    img
      width 242px
      height 110px
  &__text
    text-align center
  &__title
    font-size 1.42em
    max-width 402px
    font-weight 300
    font-size 30px
    display block
    width 70%
    margin 0 auto
  &__button
    text-align center
    button
      width 300px
      height 50px
      border-radius 10px
      background-image linear-gradient(to bottom, #8fc73e, #61bb46)
      box-shadow 2px 2px 5px 0 rgba(0, 0, 0, 0.3)
      border none
      color white
      margin 0
      font-weight 300
.social-network
  display flex
  justify-content flex-end
  padding .7em
  &__logo
    align-content flex-end
    margin .3em
/**
  about-project
*/
.about-project
  background-color white
.project
  background-image _background-project-1
  height 384px
  margin 0 auto
  background-size cover
  background-repeat no-repeat
  &__wrapper
    padding 4em 0 2em 0
  &__title
    margin 0
    color _white
    text-align center
    font-size 2em
    font-weight 300
  &__button
    text-align center
    margin 1em 0
    button
      width 180px
      height 45px
      border-radius 5px
      background-image linear-gradient(to bottom, #8fc73e, #61bb46)
      color _white
      margin 0
      font-weight 300
      font-size 14px
      border none

    button:hover
      background-image linear-gradient(to bottom, #8fc73e, #61bb46)
      box-shadow 1px 1px 7px 0 rgba(0, 0, 0, 0.4)
.circle
  width 144px
  height 144px
  border 5px solid _green
  border-radius 50%
  background-color blue
  margin 0 auto
  background-color rgba(0, 0, 0, 0.5)
  &__percent
    color _white
    text-align center
    font-size 2.7em
    font-weight 300
    margin-top 1em
    margin-bottom 0
  &__text
    color _white
    text-align center
    font-size 16px
    font-weight 100
    margin-top 0
/**
  component subtitles page
*/
.subtitle-box
  display flex
  margin 1em
  height 4em
  align-items center
  margin-bottom 1em
  &__text
    flex 2
    &--single
      flex 1
  &__title
    font-size 25px
    font-weight 300
    text-align center
    margin .5em 0
    padding-right .3em
  &__bar
    height .1em
    width 50%
    flex 1
    background-color _green_light
    &--double
      flex 2
/**
  about-built
*/
.about-built
  background-color _white
.built
  width 90%
  max-width 433px
  min-width: 340px
  height 312px
  margin 1em auto
  box-shadow 3px 3px 3px 0 rgba(0, 0, 0, 0.3)
  &__wrap
    display flex
  &__image
    flex-grow 1
  &__figure
    margin 0
  &__description
    padding .5em 0
  &__subtitle
    margin .3em .5em
    text-align left
    font-size 30px
    font-weight 300
  &__text
    margin 0 1em
    text-align left
    font-size 1em
    width 130px
    height 88px
    font-weight 300
  &__button
    text-align center
    margin .5em 0
    button
      width 150px
      height 45px
      border none
      border-radius 5px
      background-image linear-gradient(to bottom, #8fc73e, #61bb46)
      color _white
      margin 0
      font-weight 300
      font-size 1em
  &__state
    text-align center
    margin 1em 0 1em 0
    font-size .8em
    font-weight 300
    color _green
/**
  about-gallery
*/
.parent
  display flex
  width 368px
  margin 0 auto
  flex-wrap wrap
.work
  &__figure
    margin .5em
  &__img
    width 100%
/**
  form
*/
.ask-us
  max-width 19em
  margin 0 auto
  &__form
    margin 1.5em 0
  &__label
    font-size 12px
    font-weight 400
    letter-spacing 0
    color _green_light
  input, textarea
    width 100%
    border solid 1px _gray_soft
    height 36px
    border-radius 3px
    margin 0 0 1em 0
  textarea
    height 4em
  ::placeholder
    font-size 14px
    padding 0 0 0 0.5em
    color _gray_soft
  &__button
    text-align center
    display block
    margin .5em auto
    width 80%
    height 45px
    border none
    border-radius 5px
    background-image linear-gradient(to bottom, #8fc73e, #61bb46)
    color _white
    font-weight 300
    font-size 1em


@media only screen and (min-width: 1000px)
  .align
    margin 0 auto

@media only screen and (min-width: 550px)
  .about-us
    &__wrapper
      width 900px
      height 150px
      position absolute
      top 50%
      left 50%
      margin -75px 0 0 -450px
    &__button
      margin 15px 0 0 25px
      text-align left
    &__text
      text-align left
    &__title
      font-size 40px
      margin 0 0 0 25px
      text-align left